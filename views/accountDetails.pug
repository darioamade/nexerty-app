block content
    .logout-user
        p.text-main MY ACCOUNT
        .logout-user-wrapper
            ul
                li.login-selected
                    a.link-active(href='/account/details/') My Account Details
                li.account-navigation--wishlist
                    a(href='/account/wishlist/') My Wishlist
                li
                    a(href='/account/orders/') My Orders
                li
                    a(href='/account/address-book/')  Address Book
                li.logout
                    a#logout-clicked.logout-link.link-active(href='') logout
        p.text-main  ACCOUNT INFORMATION
        p.fine-secondary View your personal details
        //-  WHITOUT API --> `This html form methos is ideal for app without back end
        //-form.label-container(action='/submit-user-data' method='POST')


        //- WITH API
        form#form-user-data.label-container
            .label-item
                .label
                    label(for='first_name') First Name
                .input
                    //- NOTE  change late to user.name.split(' ')[0]
                    input#first_name(type='text' value=`${user.name.split(' ')[0]}` name='firstName' data-prev-value='')
            .label-item
                .label
                    label(for='last_name') Last Name
                .input
                    //- NOTE  change late to user.name.split(' ')[1]
                    input#last_name(type='text' value=`${user.name.split(' ')[1] || ' '}` name='lastName' data-prev-value='')
            .label-item
                .label
                    label(for='email') Email
                .input
                    input#email(type='email' value=`${user.email}` name='email' data-mailcheck='Did you mean')
            .label-item
                .label
                    label(for='email_confirm') Confirm Email
                .input
                    input#email_confirm(type='email' value=`${user.email}` name='email_confirm' data-mailcheck='Did you mean')
            .label-item
                .label
                    label(for='current_password') Current Password
                .input
                    input#passwordCurrent(type='password' value='' name='current_password')
            .label-item
                .label
                    label(for='password') New Password
                .input
                    input#password(type='password' value='' name='password' data-prev-value='' aria-autocomplete='list')
            .label-item
